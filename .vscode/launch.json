{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ Launch Nuxt Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://localhost:\\d+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "üîß Debug Nuxt Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "nuxt:*"
      },
      "outputCapture": "std"
    },
    {
      "name": "üèóÔ∏è Debug Nuxt Build",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["build"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "üß™ Debug Nuxt Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "üåê Launch Chrome (Client-Side)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "userDataDir": false,
      "runtimeArgs": ["--disable-web-security", "--disable-features=VizDisplayCompositor"]
    },
    {
      "name": "üîó Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "üéØ Debug Current Vue File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/nuxt",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development",
        "NUXT_DEBUG": "true"
      }
    },
    {
      "name": "üì¶ Debug SSR (Server-Side)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["preview"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "production",
        "NITRO_DEBUG": "true"
      },
      "preLaunchTask": "build"
    },
    {
      "name": "‚ö° Debug Nitro Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/.output/server/index.mjs",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "production",
        "NITRO_DEBUG": "true"
      },
      "preLaunchTask": "build"
    }
  ],
  "compounds": [
    {
      "name": "üî• Full-Stack Debug (Server + Client)",
      "configurations": ["üîß Debug Nuxt Dev Server", "üåê Launch Chrome (Client-Side)"]
    }
  ]
}
